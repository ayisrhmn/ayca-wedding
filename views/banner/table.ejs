<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Banner Name</th>
      <th>Filename Image</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < banner.length; i++) { %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= banner[i].bannerName %></td>
        <td><%= banner[i].filenameImage %></td>
        <td>
          <a href="/banner/edit/<%= banner[i]._id %>" class="btn btn-info btn-sm mb-1">
            <i class="fas fa-pencil-alt"></i>
            &nbsp;Edit
          </a>
          <form action="/banner/delete/<%= banner[i]._id %>?_method=DELETE" method="POST" style="display: inline-block;">
            <button class="btn btn-danger btn-sm mb-1">
              <i class="fas fa-trash"></i>
              &nbsp;Delete
            </button>
          </form>
        </td>
      </tr>
    <% } %>
  </tbody>
</table>